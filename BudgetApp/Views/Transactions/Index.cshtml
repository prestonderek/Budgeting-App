@using Azure.Core
@model IEnumerable<BudgetApp.Models.Budget.Transaction>

@{
    ViewData["Title"] = "Transactions";
    var fromValue = Context.Request.Query["from"].ToString();
    var toValue = Context.Request.Query["to"].ToString();
}

<h1 class="mb-4">Transactions</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <form method="get" class="row gx-2">
        <div class="col-auto">
            <label for="fromDate" class="form-label mb-0">From</label>
            <input type="date" id="fromDate" name="from" value="@fromValue" class="form-control" />
        </div>
        <div class="col-auto">
            <label for="toDate" class="form-label mb-0">To</label>
            <input type="date" id="toDate" name="to" value="@toValue" class="form-control" />
        </div>
        <div class="col-auto align-self-end">
            <button type="submit" class="btn btn-outline-primary">Filter</button>
        </div>
    </form>

    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Transaction
    </a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Date</th>
            <th class="text-end">Amount</th>
            <th>Account</th>
            <th>Category</th>
            <th>Memo</th>
            <th style="width: 150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.CreatedAt.ToShortDateString()</td>
                <td class="text-end">
                    @t.Amount.ToString("C")
                </td>
                <td>@t.AccountId</td>
                <td>@t.CategoryId</td>
                <td>@t.Description</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@t.TransactionId" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@t.TransactionId" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

