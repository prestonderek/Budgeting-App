@using BudgetApp.Models.ViewModels.Home
@model DashboardViewModel

@{
    ViewData["Title"] = "Home";
}

@if (!User.Identity!.IsAuthenticated)
{
    <div class="text-center">
        <h1 class="display-4">Welcome!</h1>
        <p>Track your budget, see where your money goes, and stay on top of your finances.</p>
        <p>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary me-2">Sign up</a>
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-secondary">Log in</a>
        </p>
    </div>
}
else
{
    <div class="app-page">
        <h1 class="app-section-title">Dashboard</h1>

        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="card shadow-sm dashboard-card-primary">
                    <div class="card-body">
                        <h5 class="card-title">Main Checking</h5>
                        @if (Model.HasChecking)
                        {
                            <p class="display-6">
                                @Model.CheckingBalance.ToString("C")
                            </p>
                        }
                        else
                        {
                            <p class="text-muted">
                                No checking account yet.
                            </p>
                            <a asp-controller="Accounts" asp-action="Create" class="btn btn-sm btn-primary">
                                Create Checking Account
                            </a>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm dashboard-card-expense">
                    <div class="card-body">
                        <h5 class="card-title">This Month</h5>
                        <p class="mb-1">
                            <strong>Income:</strong> @Model.MonthIncome.ToString("C")
                        </p>
                        <p class="mb-1">
                            <strong>Expenses:</strong> @Model.MonthExpenses.ToString("C")
                        </p>
                        <p class="mb-0">
                            <strong>Net:</strong>
                            <span class="@(Model.MonthNet >= 0 ? "text-success" : "text-danger")">
                                @Model.MonthNet.ToString("C")
                            </span>
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm dashboard-card-income">
                    <div class="card-body">
                        <h5 class="card-title">Quick Links</h5>
                        <ul class="list-unstyled mb-0">
                            <li><a asp-controller="Accounts" asp-action="Index">Manage Accounts</a></li>
                            <li><a asp-controller="Transactions" asp-action="Index">View Transactions</a></li>
                            <li><a asp-controller="Budget" asp-action="Edit">Edit Budget</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <h3>Recent Transactions</h3>

        @if (Model.RecentTransactions.Any())
        {
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th class="text-end">Amount</th>
                        <th>Memo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.RecentTransactions)
                    {
                        <tr>
                            <td>@t.CreatedAt.ToShortDateString()</td>
                            <td class="text-end">@t.Amount.ToString("C")</td>
                            <td>@t.Memo</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No transactions yet this month.</p>
        }
    </div>
}

