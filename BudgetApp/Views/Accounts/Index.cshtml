@model IEnumerable<BudgetApp.Models.ViewModels.Accounts.AccountListItemViewModel>

@{
    ViewData["Title"] = "Accounts";
}

<div class = "app-page">
    <h1 class="app-section-title">Accounts</h1>
    
    
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Account
        </a>
    </div>
    
    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th class="text-end">Balance</th>
                <th>Status</th>
                <th style="width: 150px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.AccountName</td>
                    <td>@a.AccountType</td>
                    <td class="text-end">
                        @a.Balance.ToString("C")
                    </td>
                    <td>
                        @if (a.IsClosed)
                        {
                            <span class="badge bg-secondary">Closed</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Open</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@a.AccountId" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@a.AccountId" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

